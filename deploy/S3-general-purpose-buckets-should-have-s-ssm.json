{
  "schemaVersion": "2.2",
  "description": "Auto-remediation for S3-general-purpose-buckets-should-have-server-acce",
  "parameters": {
    "BucketName": {
      "type": "String",
      "description": "Name of the S3 bucket to enable server access logging",
      "default": ""
    },
    "TargetBucket": {
      "type": "String",
      "description": "Name of the S3 bucket to store server access logs",
      "default": ""
    },
    "TargetPrefix": {
      "type": "String",
      "description": "Prefix for the log files",
      "default": "ServerAccessLogs/"
    }
  },
  "mainSteps": [
    {
      "name": "enableServerAccessLogging",
      "action": "aws:executeAwsApi",
      "inputs": {
        "Service": "s3",
        "Api": "PutBucketLogging",
        "BucketName": "{{BucketName}}",
        "BucketLoggingStatus": {
          "LoggingEnabled": {
            "TargetBucket": "{{TargetBucket}}",
            "TargetPrefix": "{{TargetPrefix}}"
          }
        }
      }
    }
  ]
}